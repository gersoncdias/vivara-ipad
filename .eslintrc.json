{
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true,
      "cypress/globals": true
    },
    "extends": ["eslint:recommended", "plugin:cypress/recommended", "plugin:prettier/recommended"],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "plugins": ["cypress", "prettier"],
    "rules": {
      "indent": ["error", 2], // Ajustado para 2 espaços de indentação
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "never"],
      "no-trailing-spaces": ["error"],
      "prettier/prettier": ["error", { "singleQuote": true, "tabWidth": 2, "printWidth": 80 }]
    }
  }
  